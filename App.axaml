<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="GottaManagePlus.App"
             xmlns:local="using:GottaManagePlus"
             RequestedThemeVariant="Light">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
        <FluentTheme />
    </Application.Styles>

    <Application.Resources>
        <ResourceDictionary>
            <FontFamily x:Key="Baskerville">/Assets/Fonts/Baskervville/Baskervville-Regular.ttf#Baskervville</FontFamily>
            <FontFamily x:Key="ComicRelief">/Assets/Fonts/Comic_Relief/ComicRelief-Regular.ttf#Comic Relief</FontFamily>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="/Styles/Themes/LightThemeResources.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

</Application>