<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:GottaManagePlus.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="720" d:DesignHeight="720"
        x:Class="GottaManagePlus.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        
        Width="720"
        Height="480"
        MinHeight="560"
        MinWidth="480"
        Title="GottaManagePlus">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <!-- Note: By default, the light theme is used in preview! -->
                <ResourceDictionary x:Key="Light">
                    <!-- Window Settings -->
                    <LinearGradientBrush
                            x:Key="MainWindowBgColor"
                             StartPoint="0%,0%" 
                             EndPoint="0%,100%"> 
                        <GradientStop Color="rgba(235, 235, 235, 1)" Offset="0.55"/>
                        <GradientStop Color="rgba(177, 177, 177, 1)" Offset="1.0"/>
                    </LinearGradientBrush>

                    <!-- All Menus -->
                    <Color x:Key="MainMenus-Bg">rgba(105, 105, 105, 0.1)</Color>
                    <Color x:Key="TopMenu-Bg">rgba(36, 35, 35, 0.29)</Color>

                    <!-- Side Menu Settings -->
                    <SolidColorBrush x:Key="SideMenu-Btn-Home-Bg" Color="rgba(95, 255, 89, 0.75)" />
                    <SolidColorBrush x:Key="SideMenu-Btn-Home-Border" Color="rgba(0, 193, 32, 0.75)" />
                    <SolidColorBrush x:Key="SideMenu-Btn-Settings-Bg" Color="rgba(249, 59, 34, 0.75)" />
                    <SolidColorBrush x:Key="SideMenu-Btn-Settings-Border" Color="rgba(162, 0, 0, 0.75)" />
                    <SolidColorBrush x:Key="SideMenu-Btn-About-Bg" Color="rgba(255, 230, 0, 1)" />
                    <SolidColorBrush x:Key="SideMenu-Btn-About-Border" Color="rgba(193, 174, 0, 1)" />

                    <!-- MISC Colors -->
                    <SolidColorBrush x:Key="LongLineStruck-Color" Color="rgba(0, 0, 0, 0.35)" />

                </ResourceDictionary>
                
                <ResourceDictionary x:Key="Dark">
                    <SolidColorBrush x:Key="CustomBackgroundBrush" Color="#333333" />
                    <Color x:Key="CustomBackgroundColor">#FFFFFF</Color>
                </ResourceDictionary>
                
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <!-- Styles to define -->
    <Window.Styles>
        <!--SIDE MENU BUTTON STYLING-->
        <Style Selector="Button.SideMenu-Button">
            <Setter Property="Margin" Value="0 7.5" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="MinHeight" Value="65" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="BorderThickness" Value="2.25" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="FontSize" Value="20" />
        </Style>

        <!--MAIN GRID STYLING-->
        <Style Selector="Grid.MainSection">
            <Setter Property="Background" Value="{DynamicResource MainWindowBgColor}" />
        </Style>

        <!-- Scrollbar modifications -->
        <Style Selector="ScrollViewer#Scroll_ModList">
            <Style Selector="^ ScrollBar">
                <Style Selector="^:vertical">
                    <!-- Some rectangle that covers up the whole scroll bar -->
                    <Style Selector="^ /template/ Rectangle#TrackRect">
                        <Setter Property="Fill" Value="Transparent" /> <!-- Allows seeing the actual bar -->
                    </Style>
                    
                    <!-- Bar itself -->
                    <Style Selector="^ Thumb">
                        <Setter Property="MaxWidth" Value="7.5" />
                        <Setter Property="MinHeight" Value="125" />
                        <Setter Property="CornerRadius" Value="25" />
                    </Style>
                </Style>
                <Style Selector="^ RepeatButton">
                    <Setter Property="IsVisible" Value="False" />
                </Style>
            </Style>
        </Style>

        <!-- Line Strokes -->
        <Style Selector="Rectangle.Stroke">
            <Setter Property="Height" Value="1" />
            <Setter Property="Fill" Value="{DynamicResource LongLineStruck-Color}" />
            <Setter Property="Margin" Value="0 12" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
        </Style>

        <Style Selector="TextBlock.Label">
            
        </Style>

    </Window.Styles>

    
    <!-- MAIN -->
    <Grid
    RowDefinitions="Auto, *"
    Classes="MainSection"
     >
         <!-- START of Top/Logo -->
        <Border 
        Grid.Row="0"
        BorderThickness="0 0 0 5" 
        BorderBrush=""
        Background="{DynamicResource TopMenu-Bg}" 
        MinHeight="128" />

        <DockPanel Grid.Row="0">
            <Image HorizontalAlignment="Left" Source="{Binding GottaSweepLogo}" MaxWidth="145" MaxHeight="145" Margin="0 10" />
            <TextBlock Margin="20" FontSize="32" Text="Gotta Manage Plus" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        </DockPanel>
        <!-- END of TOP -->

        <!-- START of Body -->
        <Grid
            ColumnDefinitions="200, *"
            Grid.Row="1"
        >
            <!-- START of Nav Bar -->
            <Border 
            Background="{DynamicResource MainMenus-Bg}" 
            CornerRadius="{Binding AllMenus_CornerRadius_TopRight}"  
            Grid.Column="0" 
            Margin="0 5 0 0"/>

            <StackPanel
            Name="Panel_NavBar"
            Grid.Column="0"
            Orientation="Vertical"
            Margin="10"
            >
                <Button
                VerticalAlignment="Top"
                Classes="SideMenu-Button"
                BorderBrush="{DynamicResource SideMenu-Btn-Home-Border}"
                Background="{DynamicResource SideMenu-Btn-Home-Bg}"
                Content="Home"
                />
                <Button 
                Classes="SideMenu-Button"
                
                Content="Settings"
                BorderBrush="{DynamicResource SideMenu-Btn-Settings-Border}"
                Background="{DynamicResource SideMenu-Btn-Settings-Bg}"
                />
                <Button 
                Classes="SideMenu-Button"
                BorderBrush="{DynamicResource SideMenu-Btn-About-Border}"
                Background="{DynamicResource SideMenu-Btn-About-Bg}"
                Content="About"
                />
            </StackPanel>
            <!-- END of Nav Bar -->
            
            <!-- START of Mod List-->
            <Border
            ClipToBounds="True"
            Grid.Column="1"
            Background="{DynamicResource MainMenus-Bg}"
            Margin="25 5 10 10"
            CornerRadius="{Binding AllMenus_CornerRadius_All}"
            >
                <Grid RowDefinitions="Auto, *">
                    <!-- Mod Label -->
                    <StackPanel
                    Grid.Row="0"
                    HorizontalAlignment="Stretch"
                    Margin="12.5">
                        <TextBlock 
                        Text="Installed Mods" 
                        TextAlignment="Left"
                        FontSize="35"/>
                        <Rectangle Classes="Stroke" />
                    </StackPanel>

                <!-- Actual Mod Scroll Viewer -->
                <ScrollViewer
                Name="Scroll_ModList"
                Background="{DynamicResource MainMenus-Bg}"
                AllowAutoHide="False"
                Grid.Row="1"
                Margin="15"
                >
                    <StackPanel>
                    <TextBlock FontSize="22" Text="Mod 1" Height="200" Background="Blue" HorizontalAlignment="Stretch" TextAlignment="Center" />
                        <TextBlock FontSize="22" Text="Mod 2" Height="200" Background="LightBlue" HorizontalAlignment="Stretch" TextAlignment="Center" />
                    <TextBlock FontSize="22" Text="Mod 3" Height="200" Background="LightBlue" HorizontalAlignment="Stretch" TextAlignment="Center" />
                    <TextBlock FontSize="22" Text="Mod 4" Height="200" Background="LightBlue" HorizontalAlignment="Stretch" TextAlignment="Center" />
                    </StackPanel>
                    </ScrollViewer>
                <!-- END of Mod List -->
                </Grid>
            </Border>
        </Grid>
        <!-- END of Body -->
    </Grid>

</Window>