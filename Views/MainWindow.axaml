<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:GottaManagePlus.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1720" d:DesignHeight="820"
        x:Class="GottaManagePlus.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        WindowStartupLocation="CenterScreen"

        Icon="/Assets/avalonia-logo.ico"
        WindowState="Normal"
        MinHeight="700"
        MinWidth="1080"
        Title="Gotta Manage Plus">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>
    <Design.DesignStyle>
        <StyleInclude Source="/Styles/style.axaml"/>
    </Design.DesignStyle>

    <!-- Styles to define -->
    <Window.Styles>
        <StyleInclude Source="/Styles/style.axaml"/>
    </Window.Styles>

    <!-- MAIN -->
    <Grid
    RowDefinitions="Auto, *"
    Classes="MainSection"
     >
        <!-- START of Top/Logo -->
        <Border
        Grid.Row="0"
        MinHeight="128"
        Margin="0 0 0 10"
        BoxShadow="0 0 35 2 Black"
        Classes="Menu_Border TopMenu_Behind_Border"
        >
            <Panel>
                <Border 
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">
                    <Border.Background>
                        <LinearGradientBrush
                        StartPoint="50% 0%"
                        EndPoint="0% 0%"
                        SpreadMethod="Reflect"
                        >
                            <LinearGradientBrush.GradientStops>
                                <GradientStop Color="#AA000000" Offset="0.65"/>
                                <GradientStop Color="#00000000" Offset="1"/>
                            </LinearGradientBrush.GradientStops>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
                <Border
                Classes="Menu_Border TopMenu_Border"
                ClipToBounds="True">
                        <Image
                        HorizontalAlignment="Center" 
                        Source="/Assets/UI/Logo.png"
                        MaxWidth="256" 
                        MaxHeight="256" 
                        Classes="GlowShadow"/>
                </Border>
            </Panel>
        </Border>
        <!-- END of TOP -->

        <!-- START of Body -->
        <Grid
            Name="BodyGrid"
            ColumnDefinitions="Auto, *"
            RowDefinitions="300, *"
            Grid.Row="1"
        >
            <!-- START of Side Menu -->
                <!-- START of Nav Bar -->
                <Border
                    Grid.Column="0"
                    Grid.Row="0"
                    HorizontalAlignment="Left"
                    Width="200"
                    Classes="Menu_Border">
                    <!-- YCTP Style-->
                    <Border.Background>
                        <ImageBrush 
                            Source="/Assets/UI/NavMenuBG.png"
                            Stretch="Fill"
                        />
                    </Border.Background>
                        
                        <StackPanel Orientation="Vertical">
                            <TextBlock 
                                Text="Navigation" 
                                Foreground="White" 
                                FontSize="24" 
                                Classes="SideMenu-Label" 
                                Margin="0 40 0 10"/>
                            <Button
                                Name="MyModsBtn"
                                Classes="SideMenu-Btn"
                                Command="{CompiledBinding GoToHomeCommand}"
                                HorizontalContentAlignment="Center"
                                Opacity="{Binding ExecutablePathSet, Mode=OneWay}"
                                IsHitTestVisible="{Binding ExecutablePathSet, Mode=OneWay}"
                            >
                                <Button.Transitions>
                                    <Transitions>
                                        <DoubleTransition
                                            Property="Opacity"
                                            Duration="0:0:0.07"
                                            Easing="SineEaseInOut"
                                        />
                                    </Transitions>
                                </Button.Transitions>
                                <!--TEMP COMMENT: USE LANGUAGE HERE-->
                                <TextBlock HorizontalAlignment="Center" Text="My Mods"/> <!-- Aligned Text -->
                            </Button>
                            <Button
                            Classes="SideMenu-Btn"
                            Command="{CompiledBinding GoToSettingsCommand}"
                            >
                                <!--TEMP COMMENT: USE LANGUAGE HERE-->
                                <TextBlock Text="Settings"/> <!-- Aligned Text -->
                            </Button>
                            <Button 
                            Classes="SideMenu-Btn"
                            Command="{CompiledBinding RevealAboutSection}"
                            >
                                <!--TEMP COMMENT: USE LANGUAGE HERE-->
                                <TextBlock Text="About"/> <!-- Aligned Text -->
                            </Button>
                        </StackPanel>
                </Border>
                <!-- START of Below Nav Bar -->
                <ContentControl
                    Margin="0 10 0 0"
                    Grid.Column="0"
                    Grid.Row="1"
                    Content="{CompiledBinding CurrentPage.SideMenuBase, FallbackValue={x:Null}, Mode=OneWay}"/>
                <!-- END of Below Nav Bar -->
                <!-- END of Nav Bar -->
            <!-- END of Side Menu -->
            
            <!-- Current Page Control -->
            <ContentControl 
                Grid.Row="0" Grid.RowSpan="2" Grid.Column="1" 
                Content="{CompiledBinding CurrentPage, Mode=OneWay}" />
        </Grid>
        <!-- END of Body -->
        
        <!-- Dialog Element -->
        <Border 
            Name="DialogOverlay"
            Grid.Row="0"
            Grid.RowSpan="2"
            Background="#7D000000"
            IsVisible="{CompiledBinding #DialogOverlay.Opacity, Mode=OneWay}"
            Opacity="{CompiledBinding Dialog.IsDialogOpen, FallbackValue=0, Mode=OneWay}">
            <Border.Transitions>
                <Transitions>
                    <DoubleTransition
                        Property="Opacity"
                        Duration="0:0:0.1"
                        Easing="SineEaseOut"
                        />
                </Transitions>
            </Border.Transitions>
            <ContentControl 
                Content="{CompiledBinding Dialog, Mode=OneWay}"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"/>
        </Border>
        <!-- End of Dialog Element -->
    </Grid>

</Window>