<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:GottaManagePlus.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1720" d:DesignHeight="820"
        x:Class="GottaManagePlus.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        WindowStartupLocation="CenterScreen"

        Icon="/Assets/avalonia-logo.ico"
        WindowState="Normal"
        MinHeight="700"
        MinWidth="1080"
        Title="Gotta Manage Plus">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>
    <Design.DesignStyle>
        <StyleInclude Source="/Styles/style.axaml"/>
    </Design.DesignStyle>

    <!-- Styles to define -->
    <Window.Styles>
        <StyleInclude Source="/Styles/style.axaml"/>
        
        <Style Selector="ContentControl Border#BodyBorder">
            <Setter Property="Margin" Value="10"/>
        </Style>
    </Window.Styles>

    <!-- START of Body -->
    <Grid
        Background="{DynamicResource MainWindowBg}"
        Name="BodyGrid"
        ColumnDefinitions="Auto, *"
        RowDefinitions="Auto, Auto, *">
        <!-- START of Side Menu -->
            <!-- START of Nav Bar -->
            <Image
                Grid.Column="0"
                Grid.Row="0"
                Margin="10 0"
                HorizontalAlignment="Left" 
                Source="/Assets/UI/Logo.png"/>
            <Border
                Grid.Column="0"
                Grid.Row="1"
                HorizontalAlignment="Left"
                Width="200"
                MinHeight="300"
                Margin="0 -20"
                Classes="Menu_Border">
                <!-- YCTP Style-->
                <Border.Background>
                    <ImageBrush 
                        Source="/Assets/UI/NavMenuBG.png"
                        Stretch="Fill"
                    />
                </Border.Background>
                    <StackPanel Orientation="Vertical">
                        <TextBlock 
                            Text="Navigation" 
                            Foreground="White" 
                            FontSize="24" 
                            Classes="SideMenu-Label" 
                            Margin="0 40 0 10"/>
                        <Button
                            Name="MyModsBtn"
                            Classes="SideMenu-Btn"
                            Command="{CompiledBinding GoToHomeCommand}"
                            HorizontalContentAlignment="Center"
                            Opacity="{Binding ExecutablePathSet, Mode=OneWay}"
                            IsHitTestVisible="{Binding ExecutablePathSet, Mode=OneWay}"
                        >
                            <Button.Transitions>
                                <Transitions>
                                    <DoubleTransition
                                        Property="Opacity"
                                        Duration="0:0:0.07"
                                        Easing="SineEaseInOut"
                                    />
                                </Transitions>
                            </Button.Transitions>
                            <!--TEMP COMMENT: USE LANGUAGE HERE-->
                            <TextBlock HorizontalAlignment="Center" Text="My Mods"/> <!-- Aligned Text -->
                        </Button>
                        <Button
                        Classes="SideMenu-Btn"
                        Command="{CompiledBinding GoToSettingsCommand}"
                        >
                            <!--TEMP COMMENT: USE LANGUAGE HERE-->
                            <TextBlock Text="Settings"/> <!-- Aligned Text -->
                        </Button>
                        <Button 
                        Classes="SideMenu-Btn"
                        Command="{CompiledBinding RevealAboutSection}"
                        >
                            <!--TEMP COMMENT: USE LANGUAGE HERE-->
                            <TextBlock Text="About"/> <!-- Aligned Text -->
                        </Button>
                    </StackPanel>
            </Border>
            <!-- START of Below Nav Bar -->
            <ContentControl
                Grid.Column="0"
                Grid.Row="2"
                Content="{CompiledBinding CurrentPage.SideMenuBase, FallbackValue={x:Null}, Mode=OneWay}"/>
            <!-- END of Below Nav Bar -->
            <!-- END of Nav Bar -->
        <!-- END of Side Menu -->
        
        <!-- Current Page Control -->
        <ContentControl 
            Grid.Row="0" Grid.RowSpan="3" Grid.Column="1"
            Content="{CompiledBinding CurrentPage, Mode=OneWay}" />
        <!-- Dialog Element -->
        <Border
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Grid.RowSpan="3"
            Background="#7D000000"
            IsVisible="{CompiledBinding Opacity, Mode=OneWay, RelativeSource={RelativeSource Self}}"
            Opacity="{CompiledBinding Dialog.IsDialogOpen, FallbackValue=0, Mode=OneWay}">
            <Border.Transitions>
                <Transitions>
                    <DoubleTransition
                        Property="Opacity"
                        Duration="0:0:0.1"
                        Easing="SineEaseOut"
                        />
                </Transitions>
            </Border.Transitions>
            <ContentControl 
                Content="{CompiledBinding Dialog, Mode=OneWay}"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"/>
        </Border>
        <!-- End of Dialog Element -->
    </Grid>
    <!-- END of Body -->
    

</Window>