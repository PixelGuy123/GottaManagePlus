<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:GottaManagePlus.ViewModels"
        xmlns:view="using:GottaManagePlus.Views"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1720" d:DesignHeight="720"
        x:Class="GottaManagePlus.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"

        Icon="/Assets/avalonia-logo.ico"
        
        MinHeight="720"
        MinWidth="700"
        Title="GottaManagePlus">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>
    <Design.DesignStyle>
        <StyleInclude Source="/Styles/style.axaml"/>
    </Design.DesignStyle>

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="/Styles/Themes/LightThemeResources.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <!-- Styles to define -->
    <Window.Styles>
        <StyleInclude Source="/Styles/style.axaml"/>
    </Window.Styles>

    <!-- MAIN -->
    <Grid
    RowDefinitions="Auto, *"
    Classes="MainSection"
     >
         <!-- START of Top/Logo -->
        <Border
        Grid.Row="0"
        MinHeight="128"
        Margin="0 0 0 10"
        Classes="Menu_Border TopMenu_Behind_Border BorderDropShadow"
        >
            <Panel>
                <Border 
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">
                    <Border.Background>
                        <LinearGradientBrush
                        StartPoint="0% 100%"
                        EndPoint="0% 0%"
                        >
                            <LinearGradientBrush.GradientStops>
                                <GradientStop Color="rgba(0, 0, 0, 0.65)" Offset="0.0"/>
                                <GradientStop Color="rgba(0, 0, 0, 0)" Offset="1.0"/>
                            </LinearGradientBrush.GradientStops>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
                <Border
                Classes="Menu_Border TopMenu_Border"
                ClipToBounds="True">
                        <Image
                        HorizontalAlignment="Center" 
                        Source="/Assets/UI/Logo.png"
                        MaxWidth="256" 
                        MaxHeight="256" 
                        Classes="GlowShadow"/>
                </Border>
            </Panel>
        </Border>
        <!-- END of TOP -->

        <!-- START of Body -->
        <Grid
            ColumnDefinitions="200, *"
            Grid.Row="1"
        >
            <!-- START of Side Menu -->
            <Grid
            Grid.Column="0"
            RowDefinitions="Auto, *"
            >
                <!-- START of Nav Bar -->
                <Border 
                ClipToBounds="True"
                Classes="Menu_Border BorderDropShadow RightCornerRadius"
                Grid.Row="0">
                    <!-- YCTP Style-->
                    <Border.Background>
                        <ImageBrush 
                        Source="/Assets/UI/NavMenuBG.png"
                        Stretch="Fill"
                        />
                    </Border.Background>
                    <Grid
                    Name="Panel_NavBar"
                    Grid.Row="0"
                    RowDefinitions="Auto, *"
                    >
                        <Border Grid.Row="0" Classes="Menu_Header">
                            <Panel>
                                <TextBlock 
                                Text="Navigation" 
                                Foreground="White" 
                                FontSize="28" 
                                Classes="SideMenu-Label HeaderMargin" 
                                Margin="0 25 0 0"/>
                            </Panel>
                        </Border>
                        
                        <StackPanel Grid.Row="1" Margin="10" Orientation="Vertical">
                            <Button
                            Classes="SideMenu-Button"
                            Command="{Binding GoToHomeCommand}"
                            >
                                <Panel 
                                HorizontalAlignment="Center">
                                    <Image
                                        Source="/Assets/UI/Icon_ModsBtn.png"
                                    />
                                    <TextBlock Text="My Mods"/> <!-- Aligned Text -->
                                </Panel>
                            </Button>
                            <Button
                            Classes="SideMenu-Button"
                            Command="{Binding GoToSettingsCommand}"
                            >
                                <Panel 
                                HorizontalAlignment="Center">
                                    <Image
                                    Source="/Assets/UI/Icon_Gears.png"
                                   />
                                    <TextBlock Text="Settings"/> <!-- Aligned Text -->
                                </Panel>
                            </Button>
                            <Button 
                            Classes="SideMenu-Button"
                            >
                                <Panel 
                                HorizontalAlignment="Center">
                                    <Image
                                    Source="/Assets/UI/Icon_ProfilesBtn.png"
                                   />
                                    <TextBlock Text="Profiles"/> <!-- Aligned Text -->
                                </Panel>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>
                <!-- END of Nav Bar -->
            </Grid>
            <!-- END of Side Menu -->

            <ContentControl Grid.Column="1" Content="{Binding CurrentPage}" />
        </Grid>
        <!-- END of Body -->
    </Grid>

</Window>