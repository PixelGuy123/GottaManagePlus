<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:GottaManagePlus.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1720" d:DesignHeight="720"
        x:Class="GottaManagePlus.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        WindowStartupLocation="CenterScreen"

        Icon="/Assets/avalonia-logo.ico"
        
        MinHeight="700"
        MinWidth="1080"
        Title="GottaManagePlus">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>
    <Design.DesignStyle>
        <StyleInclude Source="/Styles/style.axaml"/>
    </Design.DesignStyle>

    <!-- Styles to define -->
    <Window.Styles>
        <StyleInclude Source="/Styles/style.axaml"/>
    </Window.Styles>

    <!-- MAIN -->
    <Grid
    RowDefinitions="Auto, *"
    Classes="MainSection"
     >
         <!-- START of Top/Logo -->
        <Border
        Grid.Row="0"
        MinHeight="128"
        Margin="0 0 0 10"
        Classes="Menu_Border TopMenu_Behind_Border BorderDropShadow"
        >
            <Panel>
                <Border 
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">
                    <Border.Background>
                        <LinearGradientBrush
                        StartPoint="50% 0%"
                        EndPoint="0% 0%"
                        SpreadMethod="Reflect"
                        >
                            <LinearGradientBrush.GradientStops>
                                <GradientStop Color="#AA000000" Offset="0.65"/>
                                <GradientStop Color="#00000000" Offset="1"/>
                            </LinearGradientBrush.GradientStops>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
                <Border
                Classes="Menu_Border TopMenu_Border"
                ClipToBounds="True">
                        <Image
                        HorizontalAlignment="Center" 
                        Source="/Assets/UI/Logo.png"
                        MaxWidth="256" 
                        MaxHeight="256" 
                        Classes="GlowShadow"/>
                </Border>
            </Panel>
        </Border>
        <!-- END of TOP -->

        <!-- START of Body -->
        <Grid
            ColumnDefinitions="200, *"
            Grid.Row="1"
        >
            <!-- START of Side Menu -->
            <Grid
            Grid.Column="0"
            RowDefinitions="Auto, *"
            >
                <!-- START of Nav Bar -->
                <Border 
                ClipToBounds="True"
                Classes="Menu_Border BorderDropShadow RightCornerRadius"
                Grid.Row="0">
                    <!-- YCTP Style-->
                    <Border.Background>
                        <ImageBrush 
                        Source="/Assets/UI/NavMenuBG.png"
                        Stretch="Fill"
                        />
                    </Border.Background>
                    <Grid
                    RowDefinitions="Auto, *"
                    >
                        <Border Grid.Row="0" Classes="Menu_Header">
                            <Panel>
                                <!--TEMP COMMENT: USE LANGUAGE HERE-->
                                <TextBlock 
                                    Text="Navigation" 
                                    Foreground="White" 
                                    FontSize="28" 
                                    Classes="SideMenu-Label" 
                                    Margin="0 25 0 0"/>
                            </Panel>
                        </Border>
                        
                        <StackPanel Grid.Row="1" Margin="10" Orientation="Vertical">
                            <Button
                                Classes="SideMenu-Button"
                                Command="{Binding GoToHomeCommand}"
                                HorizontalContentAlignment="Center"
                            >
                                <!--TEMP COMMENT: USE LANGUAGE HERE-->
                                <TextBlock HorizontalAlignment="Center" Text="My Mods"/> <!-- Aligned Text -->
                            </Button>
                            <Button
                            Classes="SideMenu-Button"
                            Command="{Binding GoToSettingsCommand}"
                            >
                                <!--TEMP COMMENT: USE LANGUAGE HERE-->
                                <TextBlock Text="Settings"/> <!-- Aligned Text -->
                            </Button>
                            <Button 
                            Classes="SideMenu-Button"
                            >
                                <!--TEMP COMMENT: USE LANGUAGE HERE-->
                                <TextBlock Text="Profiles"/> <!-- Aligned Text -->
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>
                <!-- END of Nav Bar -->
            </Grid>
            <!-- END of Side Menu -->
            
            <!-- Current Page Control -->
            <ContentControl Grid.Column="1" Content="{Binding CurrentPage}" />
        </Grid>
        <!-- END of Body -->
    </Grid>

</Window>