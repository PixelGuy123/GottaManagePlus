<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Inclusions -->
    <StyleInclude Source="Buttons.axaml"/>
    <StyleInclude Source="TextBlock.axaml"/>
    <StyleInclude Source="ScrollViewer.axaml"/>
    <StyleInclude Source="AutoCompleteBox.axaml"/>
    <StyleInclude Source="Borders.axaml"/>
    <StyleInclude Source="ReusableEffects.axaml"/>
    
    <!-- MISC styling that's way too specific to get its own .axaml -->

    <!--MAIN GRID STYLING-->
    <Style Selector="Grid.MainSection">
        <Setter Property="Background" Value="{DynamicResource MainWindowBg}" />
    </Style>
    <!-- Line Strokes -->
    <Style Selector="Rectangle.Stroke">
        <Setter Property="Height" Value="1" />
        <Setter Property="Fill" Value="{DynamicResource LongLineStruck-Color}" />
        <Setter Property="Margin" Value="10 6" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
    </Style>
    
</Styles>